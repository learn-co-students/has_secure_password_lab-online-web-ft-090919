<%= form_for @user, url: '/signup', method: :post do |f| %>
    <%= f.label "Name: " %>
    <%= f.text_field :username %>
    <br>
    <%= f.label "Password: " %>
    <%= f.password_field :password %>
    <%= f.label "Confirm Password: " %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.submit %>
<% end %> 