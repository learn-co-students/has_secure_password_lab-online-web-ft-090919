<h1>Signup</h1>
<%= form_for(@user, url: '/signup') do |f| %>
  <%= f.label :name, 'Username:' %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password, 'Confirm password:' %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit 'Signup' %>
<% end %>
